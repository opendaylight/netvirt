<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
           odl:use-default-for-reference-types="true">

    <reference id="dataBrokerRef" interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"/>

    <odl:clustered-app-config id="qosalertConfig"
                              binding-class="org.opendaylight.yang.gen.v1.urn.opendaylight.params.xml.ns.yang.netvirt.qosalert.config.rev161205.QosalertConfig"
                              default-config-file-name="netvirt-qosalert-config.xml"
                              update-strategy="none">
    </odl:clustered-app-config>

    <bean id="qosAlertManagerRef" class="org.opendaylight.netvirt.qosalert.QosAlertManager"
          factory-method="getInstance" init-method="init" destroy-method="close">
        <argument ref="dataBrokerRef"/>
        <argument ref="qosalertConfig"/>
    </bean>

    <bean id="qosalertConfigListener"
          class="org.opendaylight.netvirt.qosalert.QosAlertConfigListener"
          factory-method="getInstance" init-method="init" destroy-method="close">
        <argument ref="dataBrokerRef" />
        <argument ref="qosAlertManagerRef" />
    </bean>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">

        <command>
            <action class="org.opendaylight.netvirt.qosalert.QosAlertEnableCLI">
                <property name="qosAlertManager" ref="qosAlertManagerRef"/>
            </action>
        </command>
        <command>
            <action class="org.opendaylight.netvirt.qosalert.QosAlertThresholdCLI">
                <property name="qosAlertManager" ref="qosAlertManagerRef"/>
            </action>
        </command>
        <command>
            <action class="org.opendaylight.netvirt.qosalert.QosAlertLogFileNameCLI">
                <property name="qosAlertManager" ref="qosAlertManagerRef"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
