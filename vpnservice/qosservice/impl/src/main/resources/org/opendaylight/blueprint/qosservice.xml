<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
           odl:use-default-for-reference-types="true">
    <reference id="dataBroker"
               interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"
               odl:type="default" />
    <reference id="mdsalUtils"
               interface="org.opendaylight.genius.mdsalutil.interfaces.IMdsalApiManager" />
    <reference id="neutronvpnManager"
               interface="org.opendaylight.netvirt.neutronvpn.interfaces.INeutronVpnManager" />
    <odl:rpc-service id="odlInterfaceRpcService"
                 interface="org.opendaylight.yang.gen.v1.urn.opendaylight.genius.interfacemanager.rpcs.rev160406.OdlInterfaceRpcService" />

    <odl:clustered-app-config id="qosalertConfig"
                              binding-class="org.opendaylight.yang.gen.v1.urn.opendaylight.params.xml.ns.yang.netvirt.qosalert.config.rev170301.QosalertConfig"
                              default-config-file-name="netvirt-qosalert-config.xml"
                              update-strategy="none">
    </odl:clustered-app-config>

    <odl:rpc-service id="odlDirectStatisticsService"
                     interface="org.opendaylight.yang.gen.v1.urn.opendaylight.direct.statistics.rev160511.OpendaylightDirectStatisticsService" />


    <bean id="QosPolicyChangeListener"
          class="org.opendaylight.netvirt.qosservice.QosPolicyChangeListener"
          init-method="start" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="neutronvpnManager" />
        <argument ref="odlInterfaceRpcService" />
        <argument ref="mdsalUtils" />
    </bean>

    <bean id="QosNeutronNetworkChangeListener"
          class="org.opendaylight.netvirt.qosservice.QosNeutronNetworkChangeListener"
          init-method="start" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="neutronvpnManager" />
        <argument ref="odlInterfaceRpcService" />
        <argument ref="mdsalUtils" />
    </bean>

    <bean id="QosNeutronPortChangeListener"
          class="org.opendaylight.netvirt.qosservice.QosNeutronPortChangeListener"
          init-method="start" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="neutronvpnManager" />
        <argument ref="odlInterfaceRpcService" />
        <argument ref="mdsalUtils" />
    </bean>

    <bean id="QosInterfaceStateChangeListener"
          class="org.opendaylight.netvirt.qosservice.QosInterfaceStateChangeListener"
          init-method="init" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="odlInterfaceRpcService" />
        <argument ref="neutronvpnManager" />
        <argument ref="mdsalUtils" />
    </bean>

    <bean id="QosNodeListener"
          class="org.opendaylight.netvirt.qosservice.QosNodeListener"
          init-method="init" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="mdsalUtils"/>
    </bean>

    <bean id="qosAlertManagerRef" class="org.opendaylight.netvirt.qosservice.QosAlertManager"
          factory-method="getInstance" init-method="init" destroy-method="close">
        <argument ref="dataBroker"/>
        <argument ref="qosalertConfig"/>
        <argument ref="odlDirectStatisticsService" />
    </bean>

    <bean id="qosalertConfigListener"
          class="org.opendaylight.netvirt.qosservice.QosAlertConfigListener"
          factory-method="getInstance" init-method="init" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="qosAlertManagerRef" />
    </bean>

</blueprint>
